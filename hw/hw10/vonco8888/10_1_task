class Polygon:
    def __init__(self, sides):
        self.sides = sides

class Rectangle(Polygon):
    def __init__(self, length, width):
        super().__init__(4)  # у прямокутника 4 сторони
        self.length = length
        self.width = width

    def area(self):
        return self.length * self.width


# Приклад
rect = Rectangle(5, 3)
print("Rectangle area:", rect.area())  # 15
