from softserve.random import randint  # –Ü–º–ø–æ—Ä—Ç—É—î–º–æ randint –∑ –º–æ–¥—É–ª—è softserve.random

# –ì–µ–Ω–µ—Ä—É—î–º–æ –≤–∏–ø–∞–¥–∫–æ–≤–µ —á–∏—Å–ª–æ –≤—ñ–¥ 1 –¥–æ 100
secret_number = randint(1, 100)
attempts = 10

print("üéÆ –í–≥–∞–¥–∞–π —á–∏—Å–ª–æ –≤—ñ–¥ 1 –¥–æ 100. –£ —Ç–µ–±–µ —î 10 —Å–ø—Ä–æ–±!")

for i in range(1, attempts + 1):
    try:
        guess = int(input(f"\n–°–ø—Ä–æ–±–∞ {i}. –í–≤–µ–¥–∏ —á–∏—Å–ª–æ: "))
        
        if guess == secret_number:
            print(f"üéâ –í—ñ—Ç–∞—î–º–æ! –¢–∏ –≤–≥–∞–¥–∞–≤ —á–∏—Å–ª–æ {secret_number} –∑ {i}-—ó —Å–ø—Ä–æ–±–∏!")
            break
        elif guess < secret_number:
            print("üîº –ó–∞–≥–∞–¥–∞–Ω–µ —á–∏—Å–ª–æ –±—ñ–ª—å—à–µ.")
        else:
            print("üîΩ –ó–∞–≥–∞–¥–∞–Ω–µ —á–∏—Å–ª–æ –º–µ–Ω—à–µ.")
    except ValueError:
        print("‚ùó –ë—É–¥—å –ª–∞—Å–∫–∞, –≤–≤–µ–¥–∏ —Ü—ñ–ª–µ —á–∏—Å–ª–æ.")

else:
    print(f"\nüòî –ù–∞ –∂–∞–ª—å, —Ç–∏ –Ω–µ –≤–≥–∞–¥–∞–≤ —á–∏—Å–ª–æ. –ü—Ä–∞–≤–∏–ª—å–Ω–∞ –≤—ñ–¥–ø–æ–≤—ñ–¥—å: {secret_number}")
